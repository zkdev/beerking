<?xml version='1.0' encoding='utf-8'?>
<widget id="dev.zeekay.beerking" version="1.2.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>BeerKing</name>
    <description>
        BeerKing ein BierPong elo System.
    </description>
    <author email="beerking@zeekay.dev">
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <preference name="Orientation" value="portrait" />
    <icon src="./www/img/beeicon.png"/>
    <preference name="Fullscreen" value="true" />
</widget>
